<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.visualartsnotebook.RedeemKey">

    <TextView
        android:id="@+id/useAKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose an Account Type"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/beStudent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Become a Student"
        android:onClick="becomeStudent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/beTeacher"
        app:layout_constraintTop_toBottomOf="@+id/useAKey"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/beTeacher"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Become a Teacher"
        android:onClick="becomeTeacher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/beAdmin"
        app:layout_constraintTop_toBottomOf="@+id/beStudent"
        app:layout_constraintHorizontal_bias="0.0" />


    <Button
        android:id="@+id/beAdmin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Become an Admin"
        android:onClick="becomeAdmin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/beTeacher"
        app:layout_constraintHorizontal_bias="0.0" />

</android.support.constraint.ConstraintLayout>
