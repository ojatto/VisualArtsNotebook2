<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.visualartsnotebook.TeacherCourses">

    <TextView
        android:id="@+id/manageCourses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Your Courses:"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/generateCourse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Make a Course"
        android:onClick="makeCourse"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/viewCourses"
        app:layout_constraintTop_toBottomOf="@+id/manageCourses"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/viewCourses"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="View Taught Courses"
        android:onClick="viewTaughtCourses"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/makeAKey"
        app:layout_constraintTop_toBottomOf="@+id/generateCourse"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/makeAKey"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Make a Course Access Key"
        android:onClick="studentKeys"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/backAgain"
        app:layout_constraintTop_toBottomOf="@+id/viewCourses"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/backAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:onClick="backMain"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/makeAKey"
        app:layout_constraintHorizontal_bias="0.461" />

</android.support.constraint.ConstraintLayout>
